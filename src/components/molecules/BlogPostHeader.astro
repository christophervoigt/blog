---
import FormattedDate from '../atoms/FormattedDate.astro'

const { title, pubDate, updatedDate } = Astro.props
---

<h1>{title}</h1>
<p>
  Published on <FormattedDate date={pubDate} />
</p>
{
  updatedDate && (
    <p class="last-updated-on">
      Last updated on <FormattedDate date={updatedDate} />
    </p>
  )
}
<hr />

<style>
  hr {
    border-color: currentColor;
    margin-block: 1rem 0;
  }
  p {
    font-style: italic;
  }
</style>
