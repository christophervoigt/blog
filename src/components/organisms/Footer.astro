---
const today = new Date()

import Link from '../atoms/Link.astro'
---

<footer>
  <nav>
    <Link href="https://indieweb.social/@christophervoigt" target="_blank">Mastodon</Link>
    <Link href="https://github.com/christophervoigt" target="_blank" rel="me">GitHub</Link>
    <Link href="https://codepen.io/christophervoigt" target="_blank">CodePen</Link>
  </nav>
  <p>
    &copy; {today.getFullYear()} Christopher Voigt. All rights reserved.
  </p>
</footer>

<style>
  footer {
    text-align: center;
    margin-block-end: var(--space-l);
  }

  nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1em;
  }

  nav + p {
    margin-block-start: 1em;
  }
</style>
